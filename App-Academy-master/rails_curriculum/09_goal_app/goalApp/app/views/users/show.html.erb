<h1><%= @user.username %>'s Profile</h1>

<h2><%= @user.username %>'s Goals</h2>

<% if @user.username == current_user.username %>
  <%= link_to 'New Goal', new_goal_url %> 
  <% @user.goals.each do |goal| %>
    <%= render 'shared/goal_with_buttons', goal: goal %>
  <% end %> 
<% else %> 
  <% @user.public_goals.each do |goal| %> 
    <%= render 'shared/goal_with_buttons', goal: goal %> 
  <%end %>
<% end %>

<h2>Comments</h2> 

<% @user.comments.each do |comment| %> 
  <p><%= comment.comment %></p>
<% end %> 

<%= render 'shared/comment_form', commentable_id: @user.id, commentable_type: 'User' %>

<%= link_to 'All Users', users_url %>